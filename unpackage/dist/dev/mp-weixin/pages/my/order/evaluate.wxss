page {
  background: #F0F0F0;
}
.evaluate {
  background: #FFFFFF;
  margin-bottom: 20rpx;
}
.evaluate .titlebar {
    height: 100rpx;
    border-top: 1px solid #DDDDDD;
    border-bottom: 1px solid #DDDDDD;
}
.evaluate .titlebar .cover {
      width: 60rpx;
      height: 60rpx;
      margin: 0 21rpx;
}
.evaluate .titlebar .name {
      color: #666666;
      font-size: 23rpx;
}
.evaluate .comment {
    height: 230rpx;
    padding-left: 21rpx;
}
.evaluate .comment textarea {
      width: 100%;
      height: 100%;
      margin-top: 20rpx;
}
.evaluate .comment .speak {
      color: #999999;
      font-size: 23rpx;
}
.publish {
  height: 90rpx;
  background: #fd5e2d;
  color: #FFFFFF;
  position: fixed;
  bottom: 0;
  width: 100%;
}

