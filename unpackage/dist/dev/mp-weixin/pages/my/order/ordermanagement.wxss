page {
  background: #F0F0F0;
}
.status {
  margin: 30rpx 20rpx;
}
.status view {
    font-size: 23rpx;
}
.status .noactive {
    color: #666666;
}
.status .active {
    color: #FD5E2D;
}
.status .line {
    width: 30rpx;
    height: 3rpx;
    background: #fd5e2d;
}
.orders {
  margin: 0 auto;
  width: 710rpx;
}
.orders .order {
    margin-bottom: 20rpx;
    width: 710rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
}
.orders .order .gamecover {
      width: 120rpx;
      height: 120rpx;
      border-radius: 5rpx;
      margin: 20rpx 26rpx 0 22rpx;
}
.orders .order .gamecontent .gametitle {
      color: #343434;
      font-size: 31rpx;
      margin-top: 10rpx;
}
.orders .order .gamecontent .desc {
      color: #666666;
      font-size: 24rpx;
}
.orders .order .gamecontent .subdesc {
      color: #999999;
      font-size: 18rpx;
}
.orders .order .gamecontent .price .pricecount {
      font-size: 28rpx;
      color: #FD5E2D;
      margin-right: 306rpx;
}
.orders .order .sum {
      font-size: 26rpx;
      color: #343434;
      margin-right: 20rpx;
      margin-bottom: 30rpx;
}
.orders .order .orderStatus {
      height: 70rpx;
      border-top: 1px dashed #DDDDDD;
}
.orders .order .orderStatus .status {
        color: #FD5E2D;
        font-size: 22rpx;
}
.orders .order .orderStatus .del, .orders .order .orderStatus .confirm {
        width: 130rpx;
        height: 40rpx;
        border-radius: 20rpx;
}
.orders .order .orderStatus .del {
        border: 1px solid #DDDDDD;
}
.orders .order .orderStatus .del .deltext {
          color: #666666;
          font-size: 19rpx;
}
.orders .order .orderStatus .confirm {
        border: 1px solid #FD5E2D;
        margin: 0 20rpx 0 22rpx;
}
.orders .order .orderStatus .confirm .confirmtext {
          color: #FD5E2D;
          font-size: 19rpx;
}

