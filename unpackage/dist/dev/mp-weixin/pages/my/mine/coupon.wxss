.layout {
  margin: 20rpx;
}
.layout .coupon {
    position: relative;
    width: 710rpx;
    height: 203rpx;
    border: 1px dashed #888888;
}
.layout .coupon .pic {
      width: 100%;
      height: 100%;
}
.layout .coupon .info {
      position: absolute;
      top: 0;
      height: 180rpx;
      color: #FFFFFF;
      width: 100%;
}
.layout .coupon .info .space {
        padding-left: 40rpx;
}
.layout .coupon .info .space .indexbar {
          margin-top: 20rpx;
}
.layout .coupon .info .space .indexbar .price {
            font-size: 42rpx;
            margin-right: 20rpx;
}
.layout .coupon .info .space .indexbar .type {
            font-size: 32rpx;
}
.layout .coupon .info .space .desc {
          font-size: 17rpx;
          margin-bottom: 10rpx;
          padding-right: 40rpx;
}
.layout .coupon .info .right {
        width: 140rpx;
}
.layout .coupon .info .right .multiplication {
          font-size: 23rpx;
}
.layout .coupon .info .right .count {
          font-size: 43rpx;
}

