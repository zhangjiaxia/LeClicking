.underline {
  width: 30rpx;
  height: 3rpx;
  background: #fd5e2d;
}
.active {
  color: #FD5E2D !important;
}
.base {
  color: #343434;
}
.time {
  height: 157rpx;
  background: #F0F0F0;
}
.time .option {
    position: relative;
    top: 29rpx;
    height: 52rpx;
}
.time .option view {
      font-size: 23rpx;
}
.time .option .seven {
      margin: 0 70rpx;
}
.time .option .three .screen {
      font-size: 20rpx;
      color: #999999;
      margin-left: 19rpx;
}
.time .option .space {
      margin-right: 258rpx;
}
.time .pay {
    margin-top: 50rpx;
}
.time .pay view {
      font-size: 27rpx;
}
.time .pay .total {
      color: #343434;
      margin-left: 19rpx;
      margin-right: 95rpx;
}
.time .pay .price {
      color: #FD5E2D;
}
.paylist {
  margin-bottom: 60rpx;
}
.paylist .whole {
    height: 140rpx;
}
.paylist .whole .icon {
      width: 60rpx;
      height: 60rpx;
      background: #f3c65b;
      border-radius: 50%;
      margin-left: 20rpx;
      margin-top: 40rpx;
}
.paylist .whole .icon .icontext {
        font-size: 28rpx;
        color: #FFFFFF;
}
.paylist .whole .info {
      margin: 30rpx 20rpx 0 10rpx;
      border-bottom: 1px solid #DDDDDD;
}
.paylist .whole .info .money {
        color: #343434;
}
.paylist .whole .info .money .buy {
          font-size: 27rpx;
}
.paylist .whole .info .money .count {
          font-size: 22rpx;
}
.paylist .whole .info .paytime {
        color: #999999;
}
.paylist .whole .info .paytime view {
          font-size: 19rpx;
}

