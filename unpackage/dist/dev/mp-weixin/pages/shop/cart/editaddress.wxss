.edit {
  margin: 0 auto;
  width: 749rpx;
  height: 386rpx;
  background: #FFFFFF;
}
.edit .bar {
    height: 88rpx;
    border-top: 2rpx solid #DDDDDD;
}
.edit .bar .enter {
      font-size: 23rpx;
      color: #CFCFCF;
      margin-right: 41rpx;
}
.edit .info {
    margin-left: 29rpx;
    width: 100%;
}
.edit .detail {
    border-top: 2rpx solid #DDDDDD;
    height: 116rpx;
}
.edit .detail .indent {
      margin-right: 47rpx;
      line-height: 1.2;
}
