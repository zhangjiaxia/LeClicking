page {
  background: #F0F0F0;
}
.total {
  margin: 18rpx 30rpx;
}
.total .count {
    color: #666666;
    font-size: 23rpx;
}
.total .alldel {
    color: #FD5E2D;
    font-size: 27rpx;
}
.collects {
  margin: 0 20rpx;
  margin-bottom: 120rpx;
}
.collects .collect {
    margin-bottom: 22rpx;
    width: 710rpx;
    height: 200rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
}
.collects .collect .circle, .collects .collect .noCircle {
      font-size: 40rpx;
      margin: 60rpx 10rpx 0 31rpx;
}
.collects .collect .circle {
      color: #FD5E2D;
}
.collects .collect .noCircle {
      color: #DDDDDD;
}
.collects .collect .gamecover {
      width: 120rpx;
      height: 120rpx;
      border-radius: 5rpx;
      margin: 20rpx 26rpx 0 20rpx;
}
.collects .collect .gamecontent .gametitle {
      color: #343434;
      font-size: 31rpx;
      margin-top: 10rpx;
}
.collects .collect .gamecontent .desc {
      color: #666666;
      font-size: 23rpx;
}
.collects .collect .gamecontent .subdesc {
      color: #999999;
      font-size: 19rpx;
}
.collects .collect .gamecontent .price .pricecount {
      font-size: 28rpx;
      color: #FD5E2D;
      margin-right: 306rpx;
}
.collects .collect .gamecontent .price .del {
      width: 90rpx;
      height: 40rpx;
      border: 1px solid #DDDDDD;
      border-radius: 20rpx;
}
.collects .collect .gamecontent .price .del .deltext {
        color: #999999;
        font-size: 19rpx;
}
.operate, .del {
  margin: 0 auto;
  width: 749rpx;
  height: 98rpx;
  background: white;
  box-shadow: 0px -1px 0px 0px #dddddd;
  position: fixed;
  bottom: 0;
}
.operate view, .del view {
    font-size: 31rpx;
}
.operate .alltext, .del .alltext {
    color: #343434;
}
.operate .settlecount, .del .settlecount {
    color: #FD5E2D;
}
.operate .allselect, .operate .allNoSelect, .del .allselect, .del .allNoSelect {
    font-size: 40rpx;
    margin-left: 50rpx;
    margin-right: 17rpx;
}
.operate .allselect, .del .allselect {
    color: #FD5E2D;
}
.operate .allNoSelect, .del .allNoSelect {
    color: #DDDDDD;
}
.operate .pay {
  width: 220rpx;
  height: 70rpx;
  background: #FD5E2D;
  border-radius: 35rpx;
  margin-left: 30rpx;
  margin-right: 22rpx;
}
.operate .pay .paytext {
    color: #FFFFFF;
    font-size: 23rpx;
}
.del .allselect {
  margin-right: 30rpx;
}
.del .pay {
  width: 130rpx;
  height: 70rpx;
  background: white;
  border: 1px solid #dddddd;
  border-radius: 35rpx;
  margin-right: 21rpx;
}
.del .pay .paytext {
    font-size: 23rpx;
    color: #FD5E2D;
}

