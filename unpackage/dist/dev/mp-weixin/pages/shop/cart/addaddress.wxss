.layout {
  width: 748rpx;
  margin: 0 auto;
}
.layout .address {
    height: 90rpx;
    border-top: 1px solid #DDDDDD;
}
.layout .address .addnew {
      color: #FD5E2D;
      font-size: 31rpx;
}
.layout .line {
    height: 20rpx;
    background: #F2F2F2;
}
.layout .info {
    height: 230rpx;
    border-bottom: 1px solid #DDDDDD;
    padding: 30rpx;
}
.layout .info .element {
      height: 100%;
      position: relative;
}
.layout .info .spacebar {
      position: absolute;
      bottom: 0;
      width: 100%;
}
.layout .info .nick {
      margin-right: 23rpx;
      color: #343434;
      font-size: 31rpx;
}
.layout .info .mobile {
      color: #999999;
      font-size: 19rpx;
}
.layout .info .area {
      font-size: 26rpx;
      color: #343434;
      margin-top: 25rpx;
      margin-bottom: 31rpx;
      line-height: 1;
}
.layout .info .setdefault {
      margin-right: 13rpx;
      font-size: 24rpx;
      color: #CCCCCC;
}
.layout .info .default {
      color: #999999;
      font-size: 19rpx;
}
.layout .info .active {
      color: #FD5E2D;
}
.layout .info .operate {
      width: 90rpx;
      height: 40rpx;
      border: 1px solid #DDDDDD;
      border-radius: 5rpx;
      color: #666666;
      font-size: 19rpx;
}
.layout .info .space {
      margin-right: 20rpx;
}

