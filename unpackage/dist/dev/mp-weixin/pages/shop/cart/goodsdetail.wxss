.gamepic {
  width: 100%;
  height: 750rpx;
}
.baseinfo {
  padding-left: 19rpx;
}
.baseinfo .price .present {
    color: #000000;
    font-size: 36rpx;
    margin-right: 18rpx;
}
.baseinfo .price .original {
    color: #666666;
    font-size: 23rpx;
    text-decoration: line-through;
}
.baseinfo .price .heart {
    color: #999999;
    font-size: 32rpx;
}
.baseinfo .price .fabulous {
    color: #999999;
    font-size: 16rpx;
    margin-left: 15rpx;
    margin-right: 34rpx;
}
.baseinfo .gametitle {
    color: #343434;
    font-size: 34rpx;
    font-weight: bold;
}
.baseinfo .game {
    margin-bottom: 28rpx;
}
.baseinfo .game .desc {
      color: #666666;
      font-size: 25rpx;
}
.baseinfo .game .version {
      color: #666666;
      font-size: 23rpx;
      margin-right: 23rpx;
}
.line {
  height: 10rpx;
  background: #F2F2F2;
}
.count {
  height: 60rpx;
}
.count .down, .count .visit {
    color: #999999;
    font-size: 20rpx;
    padding-left: 23rpx;
}
.count .down {
    width: 220rpx;
}
.detail {
  padding-left: 23rpx;
  color: #343434;
}
.detail .title {
    font-size: 31rpx;
    margin: 20rpx 0 10rpx 0;
    font-weight: bold;
}
.detail .desc {
    font-size: 23rpx;
    margin-bottom: 10rpx;
    margin-right: 44rpx;
}
.detail .pic {
    width: 710rpx;
    height: 316rpx;
}
.detail .timeAxisView {
    margin-top: 30rpx;
}
.commenttop {
  margin: 0 22rpx;
}
.commenttop .comment {
    margin: 30rpx 20rpx 49rpx 20rpx;
}
.commenttop .comment .key {
      color: #343434;
      font-size: 31rpx;
}
.commenttop .comment .value {
      color: #666666;
      font-size: 23rpx;
}
.commenttop .comment .value .enter {
        color: #999999;
        font-size: 21rpx;
        -webkit-transform: rotate(-90deg);
                transform: rotate(-90deg);
        margin-left: 22rpx;
}
.commenttop .commentele {
    margin-bottom: 60rpx;
}
.commenttop .commentele .head {
      width: 70rpx;
      height: 70rpx;
      border-radius: 50%;
      margin-right: 22rpx;
}
.commenttop .commentele .discuss .nick {
      color: #343434;
      font-size: 27rpx;
}
.commenttop .commentele .discuss .date {
      color: #666666;
      font-size: 19rpx;
}
.commenttop .commentele .discuss .msg {
      color: #666666;
      font-size: 25rpx;
}
.shopbar {
  position: relative;
  height: 98rpx;
  background: #FFFFFF;
  box-shadow: 0px -1px 0px 0px #DDDDDD;
}
.shopbar .indexspace {
    margin: 0 63rpx;
}
.shopbar .indexspace .index {
      font-size: 30rpx;
      color: #666666;
}
.shopbar .indexspace .indextext {
      color: #999999;
      font-size: 17rpx;
}
.shopbar .servicespace {
    margin-right: 59rpx;
}
.shopbar .servicespace .service {
      color: #EB5D32;
      font-size: 34rpx;
}
.shopbar .servicespace .servicetext {
      color: #EB5D32;
      font-size: 17rpx;
}
.shopbar .addcart, .shopbar .pay {
    width: 220rpx;
    height: 70rpx;
    border-radius: 35rpx;
}
.shopbar .addcart {
    border: 1px solid #DDDDDD;
}
.shopbar .addcart .addcarttext {
      font-size: 23rpx;
      color: #EB5D32;
}
.shopbar .pay {
    background: #FD5E2D;
    margin-left: 31rpx;
}
.shopbar .pay .paytext {
      font-size: 23rpx;
      color: #FFFFFF;
}
.float {
  position: fixed;
  bottom: 180rpx;
  right: 41rpx;
  color: #999999;
  z-index: 100;
}
.float .circle {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    border: 1px solid #DDDDDD;
    background: #FFFFFF;
    margin-bottom: 20rpx;
}
.float .circle .cart {
      font-size: 36rpx;
}
.float .circle .share {
      font-size: 40rpx;
}
.float .circle .sharebtn {
      position: absolute;
      height: 80rpx;
      width: 100%;
      opacity: 0;
}

