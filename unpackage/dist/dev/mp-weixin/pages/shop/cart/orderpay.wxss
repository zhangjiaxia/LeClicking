page {
  background: #F0F0F0;
}
input {
  margin-left: 30rpx;
  width: 100%;
}
.tip {
  margin: 21rpx auto;
  width: 709rpx;
  height: 90rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  color: #FD5E2D;
}
.tip .device {
    margin-left: 19rpx;
    font-size: 29rpx;
}
.tip .add {
    font-size: 26rpx;
}
.tip .enter {
    font-size: 28rpx;
    color: #FD5E2D;
    margin: 0 19rpx;
}
.pays {
  margin: 0 20rpx;
  margin-top: 20rpx;
}
.pays .pay {
    margin-bottom: 22rpx;
    width: 710rpx;
    height: 200rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
}
.pays .pay .gamecover {
      width: 120rpx;
      height: 120rpx;
      border-radius: 5rpx;
      margin: 20rpx 26rpx 0 20rpx;
}
.pays .pay .gamecontent .gametitle {
      color: #343434;
      font-size: 31rpx;
      margin-top: 10rpx;
}
.pays .pay .gamecontent .desc {
      color: #666666;
      font-size: 23rpx;
}
.pays .pay .gamecontent .subdesc {
      color: #999999;
      font-size: 19rpx;
}
.pays .pay .gamecontent .price {
      color: #FD5E2D;
      font-size: 28rpx;
}
.discount {
  margin: 0 auto;
  width: 749rpx;
  height: 90rpx;
  background: #FFFFFF;
}
.discount .lefticon {
    color: #000000;
    margin-left: 30rpx;
    margin-right: 20rpx;
}
.discount .lefttext {
    color: #999999;
    font-size: 28rpx;
}
.discount .righticon {
    font-size: 28rpx;
    color: #999999;
    margin: 0 20rpx;
}
.discount .righttext {
    color: #999999;
    font-size: 26rpx;
}
.discount .distext {
    color: #343434;
    font-size: 26rpx;
}
.discount .disprice {
    color: #FD5E2D;
    font-size: 22rpx;
    margin: 0 20rpx;
}
.discount .freight {
    color: #343434;
    font-size: 22rpx;
    margin: 0 20rpx;
}
.remark {
  width: 749rpx;
  height: 90rpx;
  background: #FFFFFF;
  margin-top: 20rpx;
}
.remark .remarktext {
    margin-left: 22rpx;
    font-size: 27rpx;
    color: #999999;
}
.total {
  color: #666666;
  font-size: 26rpx;
  margin: 20rpx 20rpx 110rpx 0;
}
.purchasepay {
  position: fixed;
  bottom: 0;
  width: 749rpx;
  height: 98rpx;
  background: #FFFFFF;
  box-shadow: 0px -1px 0px 0px #dddddd;
}
.purchasepay .totals {
    margin: 0 19rpx;
    color: #343434;
    font-size: 31rpx;
}
.purchasepay .totalcount {
    color: #FD5E2D;
    font-size: 31rpx;
}
.purchasepay .purchase {
    width: 220rpx;
    height: 70rpx;
    background: #fd5e2d;
    border-radius: 35rpx;
    margin-right: 10rpx;
}
.purchasepay .purchase .paytext {
      color: #FFFFFF;
      font-size: 23rpx;
}

