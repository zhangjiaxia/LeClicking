swiper {
  height: 260rpx;
  margin-bottom: 20rpx;
}
.searchdiv {
  margin-top: 22rpx;
  margin-bottom: 20rpx;
}
.searchdiv .searchbar {
    width: 600rpx;
    height: 60rpx;
    background: #ececec;
    border-radius: 30px;
    margin-left: 20rpx;
    margin-right: 38rpx;
    position: relative;
}
.searchdiv .searchbar .search {
      font-size: 39rpx;
      color: #C8C8C8;
      position: absolute;
      left: 30rpx;
}
.searchdiv .searchbar .searchfont {
      font-size: 28rpx;
      color: #999999;
}
.searchdiv .msg {
    font-size: 42rpx;
    color: #666666;
}
.poster {
  height: 100%;
  width: 100%;
  margin-bottom: 50rpx;
}
.icontext {
  font-size: 28rpx;
  color: #343434;
}
.moregame {
  margin-top: 20rpx;
}
.moregame .enter {
    margin-left: 15rpx;
    margin-right: 42rpx;
    color: #2D71FD;
    font-size: 21rpx;
    -webkit-transform: rotate(-90deg);
            transform: rotate(-90deg);
}
.moregame .entertext {
    font-size: 36rpx;
    color: #343434;
    margin-left: 41rpx;
    margin-bottom: 10rpx;
    font-weight: bold;
}
.moregame .more {
    font-size: 24rpx;
    color: #2D71FD;
    margin-left: 15rpx;
}
.game {
  position: relative;
  color: #FFFFFF;
}
.game .recommended {
    width: 710rpx;
    height: 280rpx;
    background: black;
    border-radius: 10rpx;
}
.game .gameinfo {
    position: absolute;
    bottom: 22rpx;
    left: 44rpx;
}
.game .gameinfo .gametitle {
      font-size: 34rpx;
}
.game .gameinfo .gamedesc {
      font-size: 20rpx;
}
.deviceinfo {
  width: 350rpx;
}
.deviceinfo .picdiv {
    height: 350rpx;
    background: #FFFFFF;
    border: 1px solid #DDDDDD;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}
.deviceinfo .picdiv .device {
      height: 214rpx;
      margin-top: 54rpx;
}
.deviceinfo .desc {
    background: #F7F7F7;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    height: 90px;
}
.deviceinfo .desc .posi {
      margin-left: 10rpx;
}
.deviceinfo .desc .title {
      font-size: 28rpx;
      color: #343434;
}
.deviceinfo .desc .subtitle {
      font-size: 20rpx;
      color: #666666;
}
.deviceinfo .desc .price {
      font-size: 26rpx;
      color: #FD5E2D;
      margin-bottom: 20rpx;
}
.deviceinfo .desc .price .currency {
        font-size: 20rpx;
}
.discount {
  width: 710rpx;
  height: 180rpx;
  border-radius: 10rpx;
  margin-bottom: 27rpx;
}
.icon, .electron, .gameplay, .service {
  font-size: 70rpx;
}
.icon {
  color: #F94585;
}
.electron {
  color: #F5C73B;
}
.gameplay {
  color: #358FF5;
}
.service {
  color: #FFAA31;
}

