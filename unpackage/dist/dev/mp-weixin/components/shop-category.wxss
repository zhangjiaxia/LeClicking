        font-size: 34rpx;
        color: #343434;
        font-weight: bold;
}
.right .gameinfo .gamecontent .desc {
        font-size: 21rpx;
}
.right .gameinfo .gamecontent .downcount {
        font-size: 17rpx;
}
.right .gameinfo .gamecontent .play {
        margin-top: 6rpx;
