}
.right .gameinfo .gamecontent .price .original {
          font-size: 20rpx;
          color: #666666;
          text-decoration: line-through;
          margin-left: 19rpx;
}
.right .gameinfo .gamecontent .price .cart {
          width: 41rpx;
          height: 41rpx;
          background: #FD5E2D;
