.left {
  width: 200rpx;
  background: #ECECEC;
  height: 100%;
}
.left .bgcolor {
    background: #FFFFFF;
}
.left .pattern {
    height: 100%;
    color: #343434;
    font-size: 26rpx;
}
.left .pattern .base {
      height: 80rpx;
}
.left .pattern .active {
      border-left: 8rpx solid #FD5E2D;
}
.left .pattern .main {
      padding-left: 21rpx;
      font-size: 34rpx;
      font-weight: bold;
}
.left .pattern .sub {
      padding-left: 48rpx;
}
.right {
  height: 100%;
}
.right .space {
    padding-top: 20rpx;
}
.right .gameinfo {
    margin-left: 21rpx;
}
.right .gameinfo .gamecover {
      width: 177rpx;
      height: 177rpx;
      border-radius: 10rpx;
}
.right .gameinfo .gamecontent {
      margin-left: 16rpx;
      color: #666666;
