.popup {
  background: #FFFFFF;
  width: 500rpx;
  height: 300rpx;
  border-radius: 10rpx;
}
.popup .msg {
    text-align: center;
    margin-bottom: 64rpx;
    font-size: 32rpx;
    color: #000000;
}
.popup .bind, .popup .purchase {
    width: 180rpx;
    height: 70rpx;
    font-size: 27rpx;
    border: 1px solid #fd5e2d;
    border-radius: 10rpx;
    display: -webkit-inline-box;
    display: -webkit-inline-flex;
    display: inline-flex;
}
.popup .bind {
    margin-right: 15px;
    color: #FD5E2D;
}
.popup .purchase {
    background: #fd5e2d;
    color: #FFFFFF;
}
.devicepopup {
  width: 100%;
  background: #FFFFFF;
}
.devicepopup view {
    font-size: 27rpx;
    line-height: 1.2;
}
.devicepopup .checkdevice {
    margin: 38rpx 20rpx;
    width: 100%;
}
.devicepopup .checkdevice .choose {
      color: #343434;
}
.devicepopup .checkdevice .add {
      color: #FD5E2D;
}
.devicepopup .checkdevice .number {
      font-size: 22rpx;
}
.attributepopup {
  width: 690rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
}
.attributepopup .top {
    margin-top: 40rpx;
    margin-left: 30rpx;
}
.attributepopup .top .attrTitle {
      color: #000000;
      font-size: 36rpx;
      margin-bottom: 40rpx;
}
.attributepopup .top .item {
      width: 190rpx;
      height: 60rpx;
      border-radius: 5rpx;
      margin-right: 26rpx;
      margin-bottom: 30rpx;
      display: -webkit-inline-box;
      display: -webkit-inline-flex;
      display: inline-flex;
      background: #FFFFFF;
      border: 1px solid #DDDDDD;
      color: #333333;
}
.attributepopup .top .itemactive {
      background: #fff1ed;
      border: 1px solid #fd5e2d;
      color: #FD5E2D;
}
.attributepopup .itembar {
    height: 80rpx;
    background: #efefef;
    color: #343434;
    margin-top: 25rpx;
    padding-left: 32rpx;
}
.attributepopup .bottombtn {
    height: 100rpx;
}
.attributepopup .bottombtn .base {
      color: #666666;
}
.attributepopup .bottombtn .active {
      color: #FD5E2D;
}

